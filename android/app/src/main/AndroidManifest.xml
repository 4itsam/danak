<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danak.da">

    <!-- مجوزهای لازم -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- کوئری‌ها برای پشتیبانی از لینک‌ها و Intent‌ها -->
    <queries>
        <!-- برای لینک‌های HTTPS (گیت‌هاب، اینستاگرام، وب‌سایت‌ها) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
        <!-- برای مایکت -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="myket" />
        </intent>
        <package android:name="ir.myket.app" />
        <!-- برای تلگرام -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="tg" />
        </intent>
        <package android:name="org.telegram.messenger" />
        <!-- برای اینستاگرام -->
        <package android:name="com.instagram.android" />
        <!-- برای ProcessTextPlugin فلاتر -->
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

    <application
        android:label="danak"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <!-- تم برای فلاتر -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- متا‌دیتا برای فلاتر -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
</manifest>